{
    "name": "ibexa/user",
    "description": "Ibexa User bundle",
    "type": "ibexa-bundle",
    "license": "GPL-2.0-only",
    "replace": {
        "ezsystems/ezplatform-user": "*"
    },
    "autoload": {
        "psr-4": {
            "Ibexa\\User\\": "src/lib/",
            "Ibexa\\Bundle\\User\\": "src/bundle/",
            "Ibexa\\Contracts\\User\\": "src/contracts/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ibexa\\Tests\\Bundle\\User\\": "tests/bundle/",
            "Ibexa\\Tests\\User\\": "tests/lib/",
            "Ibexa\\Tests\\Integration\\User\\": "tests/integration/"
        }
    },
    "require": {
        "php": " >=8.3",
        "ibexa/content-forms": "~5.0",
        "ibexa/core": "~5.0",
        "ibexa/notifications": "~5.0",
        "jms/translation-bundle": "^2.4",
        "symfony/config": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/event-dispatcher": "^7.3",
        "symfony/form": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/intl": "^7.3",
        "symfony/options-resolver": "^7.3",
        "symfony/routing": "^7.3",
        "symfony/security-core": "^7.3",
        "symfony/security-http": "^7.3",
        "symfony/translation": "^7.3",
        "symfony/validator": "^7.3",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "ibexa/code-style": "~2.0.0",
        "ibexa/design-engine": "~5.0",
        "ibexa/doctrine-schema": "~5.0",
        "ibexa/fieldtype-richtext": "~5.0",
        "ibexa/http-cache": "~5.0",
        "ibexa/rector": "~5.0",
        "ibexa/rest": "~5.0",
        "ibexa/search": "~5.0",
        "matthiasnoback/symfony-dependency-injection-test": "^5.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpunit/phpunit": "^9.6",
        "symfony/phpunit-bridge": "^7.3"
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.php -v --show-progress=dots",
        "check-cs": "@fix-cs --dry-run",
        "phpstan": "phpstan analyse",
        "test": "phpunit -c phpunit.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "5.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": false,
        "sort-packages": true
    }
}