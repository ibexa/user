{
    "name": "ibexa/user",
    "description": "Ibexa User bundle",
    "type": "ibexa-bundle",
    "license": "GPL-2.0-only",
    "replace": {
        "ezsystems/ezplatform-user": "*"
    },
    "autoload": {
        "psr-4": {
            "Ibexa\\User\\": "src/lib/",
            "Ibexa\\Bundle\\User\\": "src/bundle/",
            "Ibexa\\Contracts\\User\\": "src/contracts/",
            "EzSystems\\EzPlatformUserBundle\\": "src/bundle/",
            "EzSystems\\EzPlatformUser\\": "src/lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ibexa\\Tests\\Bundle\\User\\": "tests/bundle/",
            "Ibexa\\Tests\\User\\": "tests/lib/",
            "EzSystems\\EzPlatformUserBundle\\Tests\\": "tests/bundle/",
            "EzSystems\\EzPlatformUser\\Tests\\": "tests/lib/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ibexa/core": "~4.1.0@dev",
        "ibexa/content-forms": "~4.1.0@dev",
        "jms/translation-bundle": "^1.5",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "symfony/translation": "^5.0",
        "symfony/security-core": "^5.0",
        "symfony/http-foundation": "^5.0",
        "symfony/config": "^5.0",
        "symfony/options-resolver": "^5.0",
        "symfony/event-dispatcher": "^5.0",
        "symfony/intl": "^5.0",
        "symfony/validator": "^5.0",
        "symfony/form": "^5.0",
        "symfony/routing": "^5.0",
        "symfony/swiftmailer-bundle": "^3.4",
        "twig/twig": "^3.0",
        "symfony/security-http": "^5.0"
    },
    "require-dev": {
        "ibexa/ci-scripts": "^0.2@dev",
        "ibexa/doctrine-schema": "~4.1.0@dev",
        "ibexa/search": "~4.1.0@dev",
        "ibexa/design-engine": "~4.1.0@dev",
        "ibexa/http-cache": "~4.1.0@dev",
        "ibexa/fieldtype-richtext": "~4.1.0@dev",
        "ibexa/rest": "~4.1.0@dev",
        "friendsofphp/php-cs-fixer": "^3.0",
        "ibexa/code-style": "^1.0",
        "phpunit/phpunit": "^8.2",
        "matthiasnoback/symfony-dependency-injection-test": "4.3"
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.php -v --show-progress=dots",
        "check-cs": "@fix-cs --dry-run",
        "test": "phpunit -c phpunit.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.1.x-dev"
        }
    }
}
